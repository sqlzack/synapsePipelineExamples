{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceName": {
            "type": "string",
            "metadata": "Workspace name"
        }
    },
    "variables": { "workspaceId": "[concat('Microsoft.Synapse/workspaces/', parameters('workspaceName'))]" },
    "resources": [
        {
            "name": "[concat(parameters('workspaceName'), '/pl_allPoolsResumeOrPause')]",
            "type": "Microsoft.Synapse/workspaces/pipelines",
            "apiVersion": "2019-06-01-preview",
            "properties": {
                "activities": [
                    {
                        "name": "Find All SQL Pools for Workspace",
                        "type": "WebActivity",
                        "dependsOn": [],
                        "policy": {
                            "timeout": "7.00:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false,
                            "secureInput": false
                        },
                        "userProperties": [],
                        "typeProperties": {
                            "url": {
                                "value": "@concat('https://management.azure.com/subscriptions/',pipeline().parameters.SubscriptionId,'/resourceGroups/',pipeline().parameters.ResourceGroup,'/providers/Microsoft.Synapse/workspaces/',pipeline().parameters.SynapseWorkspace,'/sqlPools?api-version=2021-06-01')",
                                "type": "Expression"
                            },
                            "method": "GET",
                            "headers": {},
                            "authentication": {
                                "type": "MSI",
                                "resource": "https://management.azure.com"
                            }
                        }
                    },
                    {
                        "name": "Loop Through Pools",
                        "type": "ForEach",
                        "dependsOn": [
                            {
                                "activity": "Find All SQL Pools for Workspace",
                                "dependencyConditions": [ "Succeeded" ]
                            }
                        ],
                        "userProperties": [],
                        "typeProperties": {
                            "items": {
                                "value": "@activity('Find All SQL Pools for Workspace').output.value",
                                "type": "Expression"
                            },
                            "activities": [
                                {
                                    "name": "Retrieve Pool name",
                                    "type": "SetVariable",
                                    "dependsOn": [],
                                    "userProperties": [],
                                    "typeProperties": {
                                        "variableName": "poolName",
                                        "value": {
                                            "value": "@item().name",
                                            "type": "Expression"
                                        }
                                    }
                                },
                                {
                                    "name": "Complete Action on SQL Pool",
                                    "type": "ExecutePipeline",
                                    "dependsOn": [
                                        {
                                            "activity": "Retrieve Pool name",
                                            "dependencyConditions": [ "Succeeded" ]
                                        }
                                    ],
                                    "userProperties": [],
                                    "typeProperties": {
                                        "pipeline": {
                                            "referenceName": "pl_pauseScaleResume",
                                            "type": "PipelineReference"
                                        },
                                        "waitOnCompletion": true,
                                        "parameters": {
                                            "Action": {
                                                "value": "@pipeline().parameters.Action",
                                                "type": "Expression"
                                            },
                                            "ActionScale": {
                                                "value": "@pipeline().parameters.ActionScale",
                                                "type": "Expression"
                                            },
                                            "SubscriptionId": {
                                                "value": "@pipeline().parameters.SubscriptionId",
                                                "type": "Expression"
                                            },
                                            "ResourceGroup": {
                                                "value": "@pipeline().parameters.ResourceGroup",
                                                "type": "Expression"
                                            },
                                            "SynapseWorkspace": {
                                                "value": "@pipeline().parameters.SynapseWorkspace",
                                                "type": "Expression"
                                            },
                                            "SqlPool": {
                                                "value": "@variables('poolName')",
                                                "type": "Expression"
                                            },
                                            "Region": {
                                                "value": "@pipeline().parameters.Region",
                                                "type": "Expression"
                                            },
                                            "EmptyBodyForPost": "{}"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                ],
                "policy": {
                    "elapsedTimeMetric": {},
                    "cancelAfter": {}
                },
                "parameters": {
                    "Action": {
                        "type": "string",
                        "defaultValue": "pause"
                    },
                    "ActionScale": { "type": "string" },
                    "SubscriptionId": { "type": "string" },
                    "ResourceGroup": { "type": "string" },
                    "SynapseWorkspace": { "type": "string" },
                    "Region": { "type": "string" }
                },
                "variables": { "poolName": { "type": "String" } },
                "folder": { "name": "pauseScaleResume" },
                "annotations": []
            },
            "dependsOn": [ "[concat(variables('workspaceId'), '/pipelines/pl_pauseScaleResume')]" ]
        },
        {
            "name": "[concat(parameters('workspaceName'), '/pl_pauseScaleResume')]",
            "type": "Microsoft.Synapse/workspaces/pipelines",
            "apiVersion": "2019-06-01-preview",
            "properties": {
                "activities": [
                    {
                        "name": "Perform Action",
                        "type": "Switch",
                        "dependsOn": [
                            {
                                "activity": "Check for SQLPool",
                                "dependencyConditions": [ "Succeeded" ]
                            }
                        ],
                        "userProperties": [],
                        "typeProperties": {
                            "on": {
                                "value": "@toLower(pipeline().parameters.Action)",
                                "type": "Expression"
                            },
                            "cases": [
                                {
                                    "value": "pause",
                                    "activities": [
                                        {
                                            "name": "pause",
                                            "type": "WebActivity",
                                            "dependsOn": [],
                                            "policy": {
                                                "timeout": "7.00:00:00",
                                                "retry": 0,
                                                "retryIntervalInSeconds": 30,
                                                "secureOutput": false,
                                                "secureInput": false
                                            },
                                            "userProperties": [],
                                            "typeProperties": {
                                                "url": {
                                                    "value": "@concat('https://management.azure.com/subscriptions/',pipeline().parameters.SubscriptionId,'/resourceGroups/',pipeline().parameters.ResourceGroup,'/providers/Microsoft.Synapse/workspaces/',pipeline().parameters.SynapseWorkspace,'/sqlPools/',pipeline().parameters.SqlPool,'/',toLower(pipeline().parameters.Action),'?api-version=2021-06-01')",
                                                    "type": "Expression"
                                                },
                                                "method": "POST",
                                                "headers": {},
                                                "body": {
                                                    "value": "@pipeline().parameters.EmptyBodyForPost",
                                                    "type": "Expression"
                                                },
                                                "authentication": {
                                                    "type": "MSI",
                                                    "resource": "https://management.azure.com"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "value": "resume",
                                    "activities": [
                                        {
                                            "name": "resume",
                                            "type": "WebActivity",
                                            "dependsOn": [],
                                            "policy": {
                                                "timeout": "7.00:00:00",
                                                "retry": 0,
                                                "retryIntervalInSeconds": 30,
                                                "secureOutput": false,
                                                "secureInput": false
                                            },
                                            "userProperties": [],
                                            "typeProperties": {
                                                "url": {
                                                    "value": "@concat('https://management.azure.com/subscriptions/',pipeline().parameters.SubscriptionId,'/resourceGroups/',pipeline().parameters.ResourceGroup,'/providers/Microsoft.Synapse/workspaces/',pipeline().parameters.SynapseWorkspace,'/sqlPools/',pipeline().parameters.SqlPool,'/',toLower(pipeline().parameters.Action),'?api-version=2021-06-01')",
                                                    "type": "Expression"
                                                },
                                                "method": "POST",
                                                "headers": {},
                                                "body": {
                                                    "value": "@pipeline().parameters.EmptyBodyForPost",
                                                    "type": "Expression"
                                                },
                                                "authentication": {
                                                    "type": "MSI",
                                                    "resource": "https://management.azure.com"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "value": "scale",
                                    "activities": [
                                        {
                                            "name": "scale",
                                            "type": "WebActivity",
                                            "dependsOn": [],
                                            "policy": {
                                                "timeout": "7.00:00:00",
                                                "retry": 0,
                                                "retryIntervalInSeconds": 30,
                                                "secureOutput": false,
                                                "secureInput": false
                                            },
                                            "userProperties": [],
                                            "typeProperties": {
                                                "url": {
                                                    "value": "@concat('https://management.azure.com/subscriptions/',pipeline().parameters.SubscriptionId,'/resourceGroups/',pipeline().parameters.ResourceGroup,'/providers/Microsoft.Synapse/workspaces/',pipeline().parameters.SynapseWorkspace,'/sqlPools/',pipeline().parameters.SqlPool,'?api-version=2021-06-01')",
                                                    "type": "Expression"
                                                },
                                                "method": "PUT",
                                                "headers": {},
                                                "body": {
                                                    "value": "@concat('{\"location\":\"',pipeline().parameters.Region,'\",\"sku\":{\"name\":\"',toUpper(pipeline().parameters.ActionScale),'\"}}')",
                                                    "type": "Expression"
                                                },
                                                "authentication": {
                                                    "type": "MSI",
                                                    "resource": "https://management.azure.com"
                                                }
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    },
                    {
                        "name": "Check for SQLPool",
                        "type": "WebActivity",
                        "dependsOn": [],
                        "policy": {
                            "timeout": "7.00:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false,
                            "secureInput": false
                        },
                        "userProperties": [],
                        "typeProperties": {
                            "url": {
                                "value": "@concat('https://management.azure.com/subscriptions/',pipeline().parameters.SubscriptionId,'/resourceGroups/',pipeline().parameters.ResourceGroup,'/providers/Microsoft.Synapse/workspaces/',pipeline().parameters.SynapseWorkspace,'/sqlPools/',pipeline().parameters.SqlPool,'?api-version=2021-06-01')",
                                "type": "Expression"
                            },
                            "method": "GET",
                            "headers": {},
                            "authentication": {
                                "type": "MSI",
                                "resource": "https://management.azure.com"
                            }
                        }
                    }
                ],
                "policy": {
                    "elapsedTimeMetric": {},
                    "cancelAfter": {}
                },
                "parameters": {
                    "Action": { "type": "string" },
                    "ActionScale": { "type": "string" },
                    "SubscriptionId": { "type": "string" },
                    "ResourceGroup": { "type": "string" },
                    "SynapseWorkspace": { "type": "string" },
                    "SqlPool": { "type": "string" },
                    "Region": { "type": "string" },
                    "EmptyBodyForPost": {
                        "type": "string",
                        "defaultValue": {}
                    }
                },
                "folder": { "name": "pauseScaleResume" },
                "annotations": []
            },
            "dependsOn": []
        }
    ]
}